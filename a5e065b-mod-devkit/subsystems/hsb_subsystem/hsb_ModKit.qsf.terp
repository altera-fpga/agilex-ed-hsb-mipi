@@ set entity_name $param0

set_instance_assignment -name IO_STANDARD "3.3-V LVCMOS" -to i2c_0_scl
set_location_assignment PIN_BU109 -to i2c_0_scl
set_instance_assignment -name AUTO_OPEN_DRAIN_PINS ON -to i2c_0_scl -entity $entity_name
set_instance_assignment -name IO_STANDARD "3.3-V LVCMOS" -to i2c_0_sda
set_location_assignment PIN_BK109 -to i2c_0_sda
set_instance_assignment -name AUTO_OPEN_DRAIN_PINS ON -to i2c_0_sda -entity $entity_name


# Bank 5A (1.8V)
set_location_assignment PIN_CL130 -to i2c_1_scl
set_location_assignment PIN_CL128 -to i2c_1_sda

set_instance_assignment -name IO_STANDARD "1.8-V LVCMOS" -to i2c_1_scl -entity $entity_name
set_instance_assignment -name IO_STANDARD "1.8-V LVCMOS" -to i2c_1_sda -entity $entity_name

set_instance_assignment -name TERMINATION "OFF" -to i2c_1_scl -entity $entity_name
set_instance_assignment -name TERMINATION "OFF" -to i2c_1_sda -entity $entity_name
set_instance_assignment -name TERMINATION "OFF" -to i2c_0_scl -entity $entity_name
set_instance_assignment -name TERMINATION "OFF" -to i2c_0_sda -entity $entity_name